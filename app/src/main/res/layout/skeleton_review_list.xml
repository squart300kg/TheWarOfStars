<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:theWarsOfStar="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="50dp"
        android:layout_height="16sp"
        android:background="@color/shimmer_color"
        android:textStyle="bold"
        android:textColor="#b5b5b5"
        theWarsOfStar:setText="@{reviewModel.nickname}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/tv_start1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@color/shimmer_color"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/iv_start2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@color/shimmer_color"
        android:layout_marginTop="6dp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        app:layout_constraintStart_toEndOf="@+id/tv_start1"/>
    <ImageView
        android:id="@+id/iv_start3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@color/shimmer_color"
        android:layout_marginTop="6dp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        app:layout_constraintStart_toEndOf="@+id/iv_start2"/>
    <ImageView
        android:id="@+id/iv_start4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@color/shimmer_color"
        android:layout_marginTop="6dp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        app:layout_constraintStart_toEndOf="@+id/iv_start3"/>

    <ImageView
        android:id="@+id/iv_start5"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@color/shimmer_color"
        android:layout_marginTop="6dp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        app:layout_constraintStart_toEndOf="@+id/iv_start4"/>
    <TextView
        android:id="@+id/tv_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textColor="@color/shimmer_color"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        app:layout_constraintStart_toEndOf="@id/iv_start5"/>
    <TextView
        android:id="@+id/tv_review_date"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:gravity="center_vertical"
        android:background="@color/shimmer_color"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname"
        app:layout_constraintStart_toEndOf="@id/tv_divider"/>
    <kr.co.prnd.readmore.ReadMoreTextView
        android:id="@+id/tv_review"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/shimmer_color"
        app:readMoreMaxLine="4"
        app:readMoreText="... 더보기"
        app:readMoreColor="@color/white"
        android:textColor="#b5b5b5"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_start1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>