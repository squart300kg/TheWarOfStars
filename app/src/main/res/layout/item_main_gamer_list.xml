<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:theWarsOfStar="http://schemas.android.com/tools">
    <data>
        <variable
            name="gamerModel"
            type="com.the.war.of.thewarofstars.model.Gamer" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/main_gamer_list_all_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:padding="@dimen/item_main_gamer_list_all_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="@dimen/item_main_gamer_list_height"
                android:layout_marginEnd="8sp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="40"
                    android:layout_height="@dimen/item_main_gamer_list_height"
                    android:src="@mipmap/ic_launcher_round"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="김택용 선수"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    theWarsOfStar:setTitle="@{gamerModel.name}"/>
            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="@dimen/item_main_gamer_list_height"
                android:layout_marginStart="8sp"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:text="드루와드루와드루와드루와드루와드루와드루와드루와드루와드루와드루와드루와드루와"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/global_font_size"
                    theWarsOfStar:setName="@{gamerModel.title}"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textSize="@dimen/global_font_size"
                        android:text="8 / 10점"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textSize="@dimen/global_font_size"
                        android:text="54개의 후기"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical"
                    android:text="100,000원 / 1판"
                    android:textSize="@dimen/global_font_size"
                    theWarsOfStar:setPrice="@{gamerModel.price}"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


