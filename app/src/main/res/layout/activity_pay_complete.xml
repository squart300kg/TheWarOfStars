<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:theWarsOfStar="http://schemas.android.com/tools"
    >
    <data>
<!--        <variable-->
<!--            name="payCompleteVm"-->
<!--            type="com.the.war.of.thewarofstars.ui.home.sub.pay.PayCompleteViewModel" />-->
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            theWarsOfStar:context=".ui.home.sub.pay.PayCompleteActivity" >

            <TextView
                android:id="@+id/tv_pay_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제 완료"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/tv_gamer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/main_orange_color"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pay_complete"
                app:layout_constraintStart_toStartOf="parent"
                theWarsOfStar:text="게이머 이름"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text=" 님의 정보"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pay_complete"
                app:layout_constraintStart_toEndOf="@id/tv_gamer_info"
                />

            <LinearLayout
                android:id="@+id/layout_gamer_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_gamer_info"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게이머 코드"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_gamer_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="824"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_gamer_tribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_gamer_code"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게이머 종족"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_gamer_tribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERRAN"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_gamer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_gamer_tribe"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게이머 아이디"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_gamer_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="flash"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_amature_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textColor="@color/main_orange_color"
                app:layout_constraintTop_toBottomOf="@+id/layout_gamer_id"
                app:layout_constraintStart_toStartOf="parent"
                theWarsOfStar:text="아마추어 닉네임" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:text=" 님의 정보"
                app:layout_constraintTop_toBottomOf="@+id/layout_gamer_id"
                app:layout_constraintStart_toEndOf="@id/tv_amature_info" />

            <LinearLayout
                android:id="@+id/layout_amature_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_amature_info"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아마추어 코드"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_amature_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="719"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_amature_tribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_amature_code"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아마추어 종족"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_amature_tribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERRAN"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_amature_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_amature_tribe"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아마추어 아이디"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_amature_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mokdongToss"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_request_before_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="게임전, 요청 사항"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/layout_amature_id"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tv_request_before_game_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background="@drawable/border_chatting_input"
                android:layout_marginTop="10dp"
                theWarsOfStar:text = "정석 운영플레이를 배우고 싶습니다"
                app:layout_constraintTop_toBottomOf="@+id/tv_request_before_game"
                />

            <LinearLayout
                android:id="@+id/layout_pay_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_request_before_game_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 금액"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150,000원"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_pay_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_pay_amount"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 날짜"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_pay_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021년 8월 20일 11시 20분"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_pay_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_pay_date"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 상태"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_orange_color"
                    android:textStyle="bold"
                    android:text="인수확인 전"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_chatting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_pay_status"
                >
                <TextView
                    android:id="@+id/tv_chatting"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="50dp"
                    android:background="@drawable/border_go_chatting"
                    android:gravity="center"
                    android:text="선수님과 채팅하러 가기"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_pay_ok_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_ok_complete_guide"
                android:textColor="@color/white"
                android:background="@drawable/border_pay_email_bolloon"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/layout_chatting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <ImageView
                android:id="@+id/tv_pay_ok_guide_down_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pay_ok_guide"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="70dp"
                android:background="@drawable/balloon_arrow_down"
                />
            <LinearLayout
                android:id="@+id/layout_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_pay_ok_guide"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <TextView
                    android:id="@+id/tv_pay_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="50dp"
                    android:background="@drawable/border_pay_type"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:text="인수 취소"
                    />
                <TextView
                    android:id="@+id/tv_pay_ok"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_pay_type"
                    android:gravity="center"
                    android:text="인수 확인"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
