<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/white" />
    <stroke
        android:width="1dp"
        android:color="#2f6699" />
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/black" />
                    <stroke
                        android:width="1dp"
                        android:color="#4f4f4f" />
                    <corners android:radius="6dp" />
                    <padding
                        android:bottom="13dp"
                        android:left="12dp"
                        android:right="12dp"
                        android:top="13dp" />
                </shape>
            </item>
            <item >
                <bitmap android:gravity="right|center" android:src="@mipmap/path" />
            </item>
        </layer-list>
    </item>
</selector>
